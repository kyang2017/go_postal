<div class="page-header">
  <h1>
    Statuses
    <a href="/statuses/new" class="btn btn-lg btn-success">New Status</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Friend</th>
        <th>Delivery Status</th>
        <th>Actions</th>
      </tr>


      <% @statuses.each do |status| %>
      <tr>
        <td><%= Friend.find_by(:id => status.friend_id).name %></td>
        <td><%= status.sentskip %></td>
        <td>
          <a href="/statuses/<%= status.id %>" class="btn btn-default">Show</a>
          <a href="/statuses/<%= status.id %>/edit" class="btn btn-default">Edit</a>
          <a href="/delete_status/<%= status.id %>" class="btn btn-default" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
